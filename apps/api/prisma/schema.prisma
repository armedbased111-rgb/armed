generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Optionnel: si tu n’as pas CREATEDB
  // shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

// Product = ton “slice” de catalogue

model Product {
  id           String   @id @default(uuid())
  slug         String   @unique
  title        String
  priceCents   Int
  currency     String   @default("EUR")
  tags         String[] @default([])
  bpm          Int?
  key          String?
  description  String?

  // Nouveaux champs pour S15
  coverUrl     String?
  previewUrl   String?
  durationSec  Int?
  waveformData Json?      // si tu veux une vraie waveform (liste de samples normalisés 0..1)

  // S19: Fichier téléchargeable
  fileUrl      String?    // URL du fichier (S3, local, etc.)
  fileSizeMb   Float?     // Taille du fichier en MB

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  items        OrderItem[]
  licenses     ProductLicense[] // prix par type de licence
}

// Order = ta "transaction" (panier / commande)
model Order {
  id               String       @id @default(uuid())
  buyerEmail       String
  totalCents       Int           @default(0)
  currency         String        @default("EUR")
  status           OrderStatus   @default(PENDING)
  paymentIntentId  String?       @unique // S19: Stripe Payment Intent ID
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  items       OrderItem[]
  downloads   Download[]
}

// OrderItem = ligne de commande
model OrderItem {
  id           String    @id @default(uuid())
  orderId      String
  productId    String
  priceCents   Int                      // prix capturé au moment de l’achat
  currency     String    @default("EUR")
  licenseType  LicenseType              // ex: STANDARD / EXTENDED

  order        Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product      Product   @relation(fields: [productId], references: [id])
}

// États de commande
enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  CANCELLED
}

model ProductLicense {
  id         String      @id @default(uuid())
  productId  String
  type       LicenseType
  priceCents Int
  currency   String      @default("EUR")

  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, type])
}


// Types de licence (adapte si besoin)
enum LicenseType {
  STANDARD
  EXTENDED
}

// S19: Suivi des téléchargements sécurisés
model Download {
  id          String   @id @default(uuid())
  orderId     String
  orderItemId String
  token       String   @unique // Token signé pour le téléchargement
  
  // Limites et expiration
  expiresAt   DateTime
  maxDownloads Int     @default(3)
  downloadCount Int    @default(0)
  
  // Tracking
  ipAddresses  String[] @default([])
  downloadDates DateTime[] @default([])
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([orderId])
}
